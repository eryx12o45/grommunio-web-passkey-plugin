{
  "name": "grommunio/passkey-plugin",
  "description": "WebAuthn passkey authentication plugin for Grommunio Web",
  "type": "library",
  "license": "AGPL-3.0",
  "authors": [
    {
      "name": "Grommunio Team",
      "email": "dev@grommunio.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=7.4",
    "web-auth/webauthn-lib": "^4.0",
    "web-auth/cose-lib": "^4.0",
    "spomky-labs/cbor-php": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^1.0 || ^2.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Grommunio\\Passkey\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Grommunio\\Passkey\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse",
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpcbf": "phpcbf --standard=PSR12 src/"
  }
}
